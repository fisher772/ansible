config setup
    charondebug="ike 4, knl 4, cfg 4, net 0, esp 4, dmn 4, mgr 4"
    uniqueids=yes

conn rw-base
    keyingtries=5
    fragmentation=yes
    dpdaction=clear
    dpdtimeout=90s
    dpddelay=30s
    ikelifetime=8h
    lifetime=1h
    auto=add

conn 12tpd-vpn
    also=rw-base
    ike=aes128-aes192-aes256-sha1-sha256-modp1024-modp3072
    esp=aes128-aes192-aes256-sha1-sha256-modp1024-modp3072
    leftsubnet=%dynamic[/1701]
    rightsubnet=%dynamic
    leftauth=psk
    rightauth=psk
    type=transport

include /etc/ipsec.d/*.conf
